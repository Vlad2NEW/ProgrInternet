@model IEnumerable<WebCalendarSandbox.Models.CalendarSystem>

@{
    ViewData["Title"] = "Календарні системи";
}

<h1>Календарні системи</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAbstract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysPerWeek)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAbstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysPerWeek)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
